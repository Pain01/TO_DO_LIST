<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFFFB"
    tools:context=".complete_note">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:background="#EFFFFB"
            android:elevation="4dp"
            android:text="2sdfsdfsfsd"
            android:textSize="32dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/textNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="480dp"
            android:layout_marginTop="40dp"
            android:background="#EFFFFB"
            android:elevation="4dp"
            android:text="2sdfsdfsfsd"
            android:visibility="visible"

            android:textSize="24dp"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"
            tools:layout_editor_absoluteX="4dp">

        </TextView>
        <EditText
            android:id="@+id/enote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:minHeight="240dp"
            android:visibility="gone"
            android:background="@drawable/rc_text_bg1"
            android:elevation="4dp"
            android:text="2sdfsdfsfsd"

            android:textSize="24dp"
            android:padding="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"
            tools:layout_editor_absoluteX="4dp">

        </EditText>

        <Button
            android:id="@+id/save_hide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="33dp"
            android:fontFamily="@font/pristina"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:background="@drawable/rc_text_bg4"
            android:visibility="gone"
            />

    </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editnote_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="#fff"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            tools:ignore="ExtraText,VectorDrawableCompat">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
</RelativeLayout>
</ScrollView>